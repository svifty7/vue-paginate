{
  "compilerOptions": {
    "target": "es2015",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "lib": [
      "ES2016",
      "DOM",
      "DOM.Iterable"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "types",
    "composite": true,
    "types": ["node"],
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "typeRoots": [
      "./src/vite-env.d.ts",
      "./node_modules/@types"
    ]
  },
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "vite.config.*",
    "src/**/*",
    "src/**/*.ts",
    "src/**/*.vue"
  ]
}
